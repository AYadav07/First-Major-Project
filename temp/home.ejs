<%- include('layout'); %>
<div id="main-content">

    <div id="left-side">
        <div id="top-left">
            <div>
                <% if(locals.user){ %>
                    <form action="/posts/create" id="new-post-form" method="post">
                        <textarea name="content" cols="30" rows="3" placeholder="Type Here" required></textarea>
                        <input type="submit" value="Post">
                    </form>
                   <% } %>
            </div>
        </div>

        <div id="bottom-left">
            <ul id="post-list">
                <% for (post of posts){ %>
                <%- include('_post') -%>
                <% } %>
            </ul>
        </div>

    </div>
    <div id="right-side">
        <p>
            Right
        </p>
    </div>

</div>







